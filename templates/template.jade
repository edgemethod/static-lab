doctype html
html.no-js(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{siteName}
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.0.5/css/foundation.min.css")
    link(href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css", rel="stylesheet", type="text/css")
    link(rel="stylesheet", href="/styles/site.css")
    link(rel="stylesheet", href="/js/woofmark.css")
    //link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
    
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=PT+Sans|Hind:400,700,600,500,300")
    //script(src="/js/jquery-1.10.2.js")
    
  body
    .top-bar
      .top-bar-left
        ul.menu
          each item in contents
            if item.metadata && item.metadata.nav
              li
                a(href=item.url) #{item.title}
            
      .top-bar-right
        ul.menu
          each item in nav          
            li
              a.button(href=item.href class=item.color) #{item.label}
    br
    if page.url == '/'
      .row
        .medium-7.large-6.columns
          h1(class=current) #{page.metadata.name}
          p.subheader #{page.metadata.introText}
          button.button Take a Tour
          button.button Start a free trial
        .show-for-large.large-3.columns
          img(src="http://placehold.it/400x370&text=PSR1257 + 12 C", alt="picture of space")
        .medium-5.large-3.columns
          .callout.secondary
            form
              .row
                .small-12.columns
                  label
                    | Find Your Dream Planet
                    input(type="text", placeholder="Search destinations")
                .small-12.columns
                  label
                    | Number of Moons
                    input(type="number", placeholder="Moons required")
                  button.button(type="submit") Search Now!
    = page.filepath.full    
    .row
      textarea#source
        != page.markdown
      
    script(src="https://code.jquery.com/jquery-2.1.4.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.0.5/js/foundation.js")             
    script(src="/js/woofmark.min.js")
    script(src="/js/megamark.min.js")
    script(src="/js/domador.min.js")
    script(src="/js/editor.js")
    
    script
      | $(function() {
      |   $(document).foundation();
      | });
